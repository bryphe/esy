{
  "name": "@bryphe/esy",
  "version": "0.1.20",
  "license": "MIT",
  "description": "Esy sandboxes for compiled languages",
  "dependencies": {
    "@esy-ocaml/esy-opam": "0.0.15",
    "esy-cygwin": "^0.1.0"
  },
  "scripts": {
    "install-cygwin": "cygwin-bash ./bootstrap-windows-install-opam-dependencies.sh",
    "build-cygwin": "cygwin-bash make bootstrap && cygwin-bash make bootstrap && cygwin-bash make build-release",
    "postinstall": "bash ./scripts/postinstall.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esy/esy.git"
  },
  "bin": {
    "esy": "./_build/default/esy/bin/esyCommand.exe",
    "esyi": "./_build/default/esyi/bin/esyi.exe"
  },
  "files": [
    "bin/",
    "scripts/",
    "_build/"
  ]
}
